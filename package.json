{
  "name": "koa2-plus",
  "version": "0.0.1",
  "description": "koa开发web项目模块",
  "main": "./src/app.ts",
  "scripts": {
    "dev:tsc": "tsc -W",
    "dev:nodemon": "nodemon dist/app.js dev",
    "start": "tsc && concurrently npm:dev:*",
    "prod": "set NODE_ENV=production&&concurrently npm:start&& node dist/app.js",
    "commit": "./node_modules/cz-customizable/standalone.js",
    "lint": "prettier --write \"./src/**/*.ts\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "async": "^3.2.3",
    "glob": "^7.2.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.1.1",
    "koa2-cors": "^2.0.6",
    "lodash-es": "^4.17.21",
    "mysql2": "^2.3.3",
    "redis": "3.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/async": "^3.2.12",
    "@types/glob": "^7.2.0",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-router": "^7.4.4",
    "@types/koa2-cors": "^2.0.2",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^16.11.12",
    "@types/redis": "2.8.28",
    "@types/require-directory": "^2.1.2",
    "commitlint-config-cz": "^0.13.3",
    "concurrently": "^7.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.3",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  }
}
